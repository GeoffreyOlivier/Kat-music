{% extends ('base.html.twig') %}
    {% block body %}


        <!-- Page Title
        ============================================= -->


        <!-- Content
        ============================================= -->

        <section id="content">

            <div class="content-wrap">

                <div class="container clearfix">

                    <!-- Post Content
                    ============================================= -->
                    <div class="postcontent nobottommargin clearfix">

                        <div class="single-post nobottommargin">

                            <!-- Single Post
                            ============================================= -->
                            <div class="entry clearfix">

                                <!-- Entry Title
                                ============================================= -->
                                <div class="entry-title">
                                    <h2>{{ article.titre }}</h2>
                                </div><!-- .entry-title end -->

                                <!-- Entry Meta
                                ============================================= -->
                                <ul class="entry-meta clearfix">
                                    <li><i class="icon-calendar3"></i> 10th July 2014</li>

                                </ul><!-- .entry-meta end -->

                                <!-- Entry Image
                                ============================================= -->
                                <div class="">
                                    <img src="{{ asset("imagesArticles/" ~ article.image) }}"
                                                     alt="Blog Single">
                                </div><!-- .entry-image end -->

                                <!-- Entry Content
                                ============================================= -->
                                <div class="entry-content notopmargin">

                                    <p>{{ article.texte|raw }}</p>

                                </div>
                            </div><!-- .entry end -->




                                <!-- Comments List
                                ============================================= -->
                                <ol class="commentlist clearfix">

                                    <li class="comment even thread-even depth-1" id="li-comment-1">
                                        <h3 id="comments-title"><span>{{ article.commentaireArticles|length }}</span>
                                            Commentaires</h3>

                                        {% for commentaireArticle in article.commentaireArticles %}


                                        <div id="comment-2" class="comment-wrap clearfix">
                                            <div class="comment-content clearfix">

                                                <div class="comment-author">{{ commentaireArticle.pseudo }}</div>
                                                <span><a href="#"
                                                         title="Permalink to this comment">{{ commentaireArticle.createdAt|date("d/M/Y") }}</a></span>
                                            </div>

                                            <p>{{ commentaireArticle.content|raw }}</p>

                                        </div>

                                        <div class="clear"></div>


                                    </li>
                                    {% endfor %}
                                </ol><!-- .commentlist end -->

                                <div class="clear"></div>

                                <!-- Comment Form
                                ============================================= -->


                                <div id="respond" class="clearfix">

                                    <h3>Leave a <span>Comment</span></h3>

                                    <form class="clearfix" action="#" method="post" id="commentform">
                                        {{ form_start(form) }}

                                        <div class="row">
                                            <div class="col-lg-4">
                                                {{ form_label(form.Pseudo) }}
                                                {{ form_widget(form.Pseudo) }}
                                            </div>
                                            <div class="col-lg-4">
                                                {{ form_label(form.Email) }}
                                                {{ form_widget(form.Email) }}
                                            </div>
                                        </div>
                                        <div class="row ">
                                            <div class="col-lg-12 mt-5">
                                                {{ form_label(form.Content) }}
                                            </div>
                                            <div class="col-lg-12 mb-5">
                                                {{ form_widget(form.Content) }}
                                            </div>
                                        </div>

                                        <div class="col_full nobottommargin">
                                            <button name="submit" type="submit" id="submit-button" tabindex="5"
                                                    value="Submit"
                                                    class="button button-3d button-xlarge button-rounded button-amber">Submit Comment
                                            </button>
                                        </div>
                                        {{ form_end(form) }}

                                    </form>

                                </div><!-- #respond end -->

                            </div><!-- #comments end -->

                        </div>

                    </div><!-- .postcontent end -->

                    <!-- Sidebar
                        ============================================= -->
                    <div class="sidebar nobottommargin col_last clearfix">
                        <div class="sidebar-widgets-wrap">


                            <div class="widget clearfix">

                                <div class="widget clearfix">

                                    <h4>Dernière musique</h4>
                                    {% for music in musics %}
                                        {{ music.embed|raw }}
                                    {% endfor %}

                                </div>
                            </div>
                            <div class="widget clearfix">
                                <h4>Prochain concert</h4>
                                {% for nextconcert in nextconcerts %}
                                    <div class="spost clearfix">
                                        <div class="entry-image">
                                            <img src="{{ asset("imagesArticles/" ~ nextconcert.image) }}"
                                                 class="petiteImage" alt="...">
                                        </div>
                                        <div class="entry-c">
                                            <div class="entry-title">
                                                <h4><a href="#">{{ nextconcert.titre }}</a></h4>
                                            </div>
                                            <div class="entry-title">
                                                <h4><img src="images/icons/map-icon.png" style="width: 1em">{{ nextconcert.lieu }}</h4>
                                            </div>
                                            <ul class="entry-meta">
                                                <li>{{ nextconcert.date|date("d/M/Y") }}</li>
                                            </ul>
                                        </div>
                                    </div>

                                {% endfor %}
                            </div>
                            <div class="widget clearfix">

                                <h4>Dernière vidéo</h4>
                                {% for lastvideo in lastvideos %}
                                    {{ lastvideo.embed|raw }}
                                {% endfor %}


                            </div>


                        </div>

                    </div>


        </section><!-- #content end -->

        </div>

        </div>

        </section><!-- #content end -->



    {% endblock %}
