{% extends ('base.html.twig') %}
    {% block body %}


        <!-- Page Title
        ============================================= -->


        <!-- Content
        ============================================= -->

        <section id="content">

            <div class="content-wrap">

                <div class="container clearfix">

                    <!-- Post Content
                    ============================================= -->
                    <div class="postcontent nobottommargin clearfix">

                        <div class="single-post nobottommargin">

                            <!-- Single Post
                            ============================================= -->
                            <div class="entry clearfix">

                                <!-- Entry Title
                                ============================================= -->
                                <div class="entry-title">
                                    <h2>{{ article.titre }}</h2>
                                </div><!-- .entry-title end -->

                                <!-- Entry Meta
                                ============================================= -->
                                <ul class="entry-meta clearfix">
                                    <li><i class="icon-calendar3"></i> 10th July 2014</li>

                                </ul><!-- .entry-meta end -->

                                <!-- Entry Image
                                ============================================= -->
                                <div class="">
                                    <img src="{{ asset("imagesArticles/" ~ article.image) }}"
                                         alt="Blog Single">
                                </div><!-- .entry-image end -->

                                <!-- Entry Content
                                ============================================= -->
                                <div class="entry-content notopmargin">

                                    <p>{{ article.texte|raw }}</p>

                                </div>
                            </div><!-- .entry end -->


                            <div class="divider divider-rounded divider-right"><i class="icon-chat"></i></div>
                            <!-- Comments List
                            ============================================= -->
                            <h3 id="comments-title"><span>{{ article.commentaireArticles|length }}</span>
                                Commentaires</h3>
                            {% for commentaireArticle in article.commentaireArticles %}
                            <ol class="commentlist clearfix">
                                <li class="comment even thread-even depth-1" id="li-comment-1">
                                    <div id="comment-1" class="comment-wrap clearfix mb-3">
                                        <div class="comment-meta">
                                            <div class="comment-author vcard">
												<span class="comment-avatar clearfix">
												<img alt="Image"
                                                     src="https://0.gravatar.com/avatar/ad516503a11cd5ca435acc9bb6523536?s=60"
                                                     class="avatar avatar-60 photo avatar-default" height="60"
                                                     width="60"></span>
                                            </div>
                                        </div>
                                        <div class="comment-content clearfix">
                                            <div class="comment-author">{{ commentaireArticle.pseudo }}<span>
                                                    <a title="Permalink to this comment">{{ commentaireArticle.createdAt|date("d/M/Y") }}</a></span>
                                            </div>

                                            <p>{{ commentaireArticle.content|raw }}</p>

                                            <a class="comment-reply-link" href="#"><i class="icon-reply"></i></a>
                                        </div>
                                        <div class="clear  "></div>
                                    </div>
                                </li>
                                {% endfor %}
                            </ol><!-- .commentlist end -->

                            <div class="divider divider-sm divider-rounded divider-center"><i class="icon-pencil"></i>
                            </div>

                            <!-- Comment Form
                            ============================================= -->


                            <div id="respond" class="clearfix">

                                <h3>Leave a <span>Comment</span></h3>

                                <form class="clearfix" action="#" method="post" id="commentform">
                                    {{ form_start(form) }}

                                    <div class="row">
                                        <div class="col-lg-4">
                                            {{ form_label(form.Pseudo) }}
                                            {{ form_widget(form.Pseudo) }}
                                        </div>
                                        <div class="col-lg-4">
                                            {{ form_label(form.Email) }}
                                            {{ form_widget(form.Email) }}
                                        </div>
                                    </div>
                                    <div class="row ">
                                        <div class="col-lg-12 mt-5">
                                            {{ form_label(form.Content) }}
                                        </div>
                                        <div class="col-lg-12 mb-5">
                                            {{ form_widget(form.Content) }}
                                        </div>
                                    </div>

                                    <div class="col_full nobottommargin">
                                        <button name="submit" type="submit" id="submit-button" tabindex="5"
                                                value="Submit"
                                                class="button button-3d button-xlarge button-rounded button-amber">
                                            Submit Comment
                                        </button>
                                    </div>
                                    {{ form_end(form) }}

                                </form>
                            </div>
                        </div>
                    </div>
                    <!-- Sidebar
                        ============================================= -->
                    <div class="sidebar nobottommargin col_last clearfix">
                        <div class="sidebar-widgets-wrap">


                            <div class="widget clearfix">

                                <div class="widget clearfix">

                                    <h4>Dernière musique</h4>
                                    {% for music in musics %}
                                        {{ music.embed|raw }}
                                    {% endfor %}

                                </div>
                            </div>
                            <div class="widget clearfix">
                                <h4>Prochain concert</h4>
                                {% for nextconcert in nextconcerts %}
                                    <div class="spost clearfix">
                                        <div class="entry-image">
                                            <img src="{{ asset("imagesArticles/" ~ nextconcert.image) }}"
                                                 class="petiteImage" alt="...">
                                        </div>
                                        <div class="entry-c">
                                            <div class="entry-title">
                                                <h4><a href="#">{{ nextconcert.titre }}</a></h4>
                                            </div>
                                            <div class="entry-title">
                                                <h4><img src="{{ asset("images/icons/map-icon.png") }}"
                                                         style="width: 1em">{{ nextconcert.lieu }}</h4>
                                            </div>
                                            <ul class="entry-meta">
                                                <li>{{ nextconcert.date|date("d/M/Y") }}</li>
                                            </ul>
                                        </div>
                                    </div>

                                {% endfor %}
                            </div>
                            <div class="widget clearfix">

                                <h4>Dernière vidéo</h4>
                                {% for lastvideo in lastvideos %}
                                    {{ lastvideo.embed|raw }}
                                {% endfor %}


                            </div>


                        </div>

                    </div>


        </section><!-- #content end -->

        </div>

        </div>

        </section><!-- #content end -->



    {% endblock %}
