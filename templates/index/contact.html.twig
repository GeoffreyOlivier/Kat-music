                                </div>

                                <input type="hidden" name="prefix" value="template-contactform-">


                            {{ form_end(formcom) }}
                        </div>

                    </div>
                    <!-- =============================== Contact Form End =========================================================-->
                    <!-- =============================== Carousel testimonial pair =================================================-->
                    <div class="col_half">
                        <h4>Livre d'or</h4>
                        <div class="fslider testimonial  mt-5" data-animation="fade" data-arrows="false">
                            <div class="flexslider">
                                <div class="slider-wrap">
                                    {% for commentaire in livreDorPair %}
                                        <div class="slide">
                                            <div class="testi-image">
                                                <script type="text/javascript"
                                                        language="javascript">document.write('' +
                                                        '<img class="avatar avatar-60 photo avatar-default" height="60" width="60" ' +
                                                        'src="{{ asset("images_kat/icon_commentaire/") }}' + Math.round((Math.random() * 8) + 1) + '.png" />');
                                                </script>
                                            </div>
                                            <div class="testi-content">
                                                <p>{{ commentaire.content|raw }}</p>
                                                <div class="testi-meta">
                                                    {{ commentaire.pseudo }}
                                                    <span>{{ commentaire.DateTime|format_datetime('full','none',locale='fr') }}</span>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                        <!-- =============================== Carousel testimonial impair =================================================-->
