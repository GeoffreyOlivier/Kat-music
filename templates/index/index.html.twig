{% extends ('base.html.twig') %}
    {% block body %}
        <!-- Page Title
        ============================================= -->
        <section id="page-title" class="page-title-parallax  page-title-dark page-title-right  bd-accueil"
                 data-bottom-top="background-position:0px 750px;"
                 data-top-bottom="background-position:0px -500px;">
            <div class="container clearfix">
                <h1>Greg Vignali</h1>
                <span>BlueKat</span>
            </div>
        </section><!-- #page-title end -->
        <!-- Page Title Mobile
        ============================================= -->
        <section id="page-title-mobile" class="page-title-parallax-mobile page-title-dark page-title-right bd-accueil">
            <div class="container clearfix">
                <h1>Greg Vignali</h1>
                <span>BlueKat </span>
            </div>
        </section><!-- #page-title end -->
        <!-- Content
        ============================================= -->
        <section id="content">
            <div class="content-wrap">

                <div class="container présentation_kat clearfix">
                    <div class="row clearfix">
                        <div class="col-lg-12">
                            <h3>Qui est Kat ?</h3>
                            <p>
                                Lorem ipsum dolor sit amet, consectetur adipisicing elit. Culpa repellendus adipisci
                                laborum
                                placeat delectus labore cupiditate deserunt minus numquam consequatur esse, hic at earum
                                illo
                                animi eaque et, dolorem quo qui eos? Quam rerum possimus maxime veniam aut ratione
                                eveniet
                                aliquid cumque aspernatur ipsum libero quaerat, nam. Ad, sunt, error!
                            </p>
                        </div>
                    </div>
                </div>
                <!-- Page Title
                ============================================= -->
                <div class="section parallax dark "
                     style="background-image: url('images_kat/kat_background2.jpg'); background-size: cover; padding: 100px 0;"
                     data-bottom-top="background-position:0px 0px;" data-top-bottom="background-position:0px -500px;">
                    <div class="container clearfix">
                        <div class="col_one_fourth nobottommargin center" data-animate="swing" data-delay="200">
                            <h1>YAÑ MATTWI</h1>
                            <span>BlueKat</span>
                        </div>
                    </div>
                </div>
                <!-- Page Title Mobile
                ============================================= -->
                <div class="section parallax-mobile dark bottommargin-lg"
                     style="background-image: url('images_kat/kat_background2.jpg'); background-size: cover; padding: 100px 0;"
                     data-bottom-top="background-position:800px 0px;"
                     data-top-bottom="background-position:800px -250px;">
                    <div class="container clearfix">
                        <div class="col_one_fourth nobottommargin center" data-animate="swing" data-delay="200">
                            <h1>YAÑ MATTWI</h1>
                            <span>BlueKat</span>
                        </div>
                    </div>
                </div>

                <div class="clear"></div>

                <div class="fslider testimonial testimonial-full bottommargin" data-animation="fade"
                     data-arrows="false">
                    <div class="flexslider">
                        <div class="slider-wrap">
                            {% for commentaire in livreDor %}
                                <div class="slide">
                                    <div class="testi-image">
                                        <script type="text/javascript"
                                                language="javascript">document.write('' +
                                                '<img class="avatar avatar-60 photo avatar-default" height="60" width="60" ' +
                                                'src="{{ asset("images_kat/icon_commentaire/") }}' + Math.round((Math.random() * 8) + 1) + '.png" />');
                                        </script>
                                    </div>
                                    <div class="testi-content">
                                        <p>{{ commentaire.content|raw }}</p>
                                        <div class="testi-meta">
                                            {{ commentaire.pseudo }}
                                            <span>{{ commentaire.DateTime|format_datetime('full','none',locale='fr') }}</span>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>

                <div class="container clearfix">

                    <!-- Post Content
                    ============================================= -->

                    <!-- Posts
                    ============================================= -->
                    <div id="posts" class="small-thumbs alt">

                        {% for article in articles %}
                        <div class="entry clearfix">
                            <div class="entry-image">
                                <a href="images/blog/full/17.jpg" data-lightbox="image">
                                    <img class="image_fade"
                                         src="{{ asset("imagesArticles/" ~ article.image) }}"
                                         alt="Standard Post with Image">
                                </a>
                            </div>
                            <div class="entry-c">
                                <div class="entry-title">
                                    <h1>Dernière News - {{ article.Titre }}</h1>
                                </div>
                                <ul class="entry-meta clearfix">
                                    <li><i class="icon-calendar3"></i>{{ article.date|format_datetime('full','none',locale='fr') }}</li>
                                </ul>
                                <div class="entry-content">
                                    <p>{{ article.Texte|slice(0, 250)|raw }}</p>
                                    <a href="{{ path('news') }}" class="more-link">Read More</a>
                                </div>
                            </div>
                        </div>
                        {% endfor %}

                    </div><!-- #posts end -->


                </div>

                <div class="container clearfix">

                    <!-- Post Content
                    ============================================= -->

                    {% for music in musics %}
							<h3>Dernière MusiK - {{music.titre}}</h3>

							{{ music.embed|raw }}


							<div class="divider"><i class="icon-circle"></i></div>
						{% endfor %}


                </div><!-- .postcontent end -->


                <div class="container clearfix">

                    <!-- Post Content
                    ============================================= -->


                    {% for video in videos %}
                        <h3>Dernière VidéoK - {{video.titre}}</h3>

                        {{ video.embed|raw }}

                    {% endfor %}

                </div><!-- .postcontent end -->


                <div class="container clearfix">

                    <div class="divider"><i class="icon-circle"></i></div>

                </div>

                <div id="portfolio"
                     class="portfolio portfolio-5 portfolio-nomargin portfolio-full portfolio-notitle clearfix"
                     style="margin-bottom: -80px !important;">
                     {% for photo in photosAccueil %}
                        <article class="portfolio-item pf-media pf-icons">
                            <div class="portfolio-image">
                                <a href="portfolio-single.html">
                                    <img src="{{ asset("imagesArticles/" ~ photo.image) }}" alt="{{ photo.titre }}">
                                </a>
                                <div class="portfolio-overlay">
                                    <a href="{{ asset("imagesArticles/" ~ photo.image) }}" class="left-icon" data-lightbox="image"><i
                                                class="icon-line-plus"></i></a>
                                </div>
                            </div>
                            <div class="portfolio-desc">
                                <h3><a href="portfolio-single.html">{{ photo.titre }}</a></h3>
                                <span>{{ photo.SousTitre }}</span>
                            </div>
                        </article>
                     {% endfor %}
                </div><!-- #portfolio end -->
            </div>
        </section><!-- #content end -->
        <!-- Content ============================================= -->


    {% endblock %}



